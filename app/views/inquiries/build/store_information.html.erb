<div class="container wizard-steps-layout">
  <h3>Store Information</h3>
  <%= form_for @inquiry, url: wizard_path do |form| %>
  <div class="row justify-content-center">
    <% if @inquiry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@inquiry.errors.count, "error") %>
          prohibited this inquiry from being saved:</h2>

        <ul>
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field col-md-8">
      <%= form.label :store_name, "What is your store name?" %>
      <%= form.text_field :store_name, class:"form-control" %>
    </div>

    <div class="field col-md-8"><br>
      <%= form.label :domain_name, "Do you already have a domain name for it?" %>
      <%= form.select(:domain_name, ["Yes", "No"], { prompt: "Select an option"}, {class: "form-control", id:"domain-name-select"}) %>
    </div>

    <div class="field col-md-8 preffered_name"><br>
      <%= form.label :preffered_name, "What is your preffered domain name for your store?" %>
      <%= form.text_field :preffered_name, class:"form-control", placeholder:"eg www.my-store.com" %>
    </div>
    <div class="field col-md-8">
      <br>
      <%= link_to 'Previous Step', previous_wizard_path, class:"btn btn-outline-success previous-button" %>
      <%= form.submit 'Next Step (2/3)', class:"btn btn-outline-success next-button" %>
    </div>
  </div>
<% end %>

</div>
