<div class="container wizard-steps-layout">
  <h3>Billing Information</h3>
    <%= form_for @inquiry, url: wizard_path do |form| %>
  <div class="row justify-content-center">
    <% if @inquiry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@inquiry.errors.count, "error") %>
          prohibited this inquiry from being saved:</h2>

        <ul>
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field col-md-8">
      <%= form.label :plan, "Which plan suits your business best?" %>
      <%= form.select(:plan, ["Standard - (5,000kes - 6,500Kes)", "Growth - (10,000Kes - 13,000Kes)", "Scale - (15,000kes - 19,500kes)"], { prompt: "Kindly choose a plan"}, {class: "form-control", id:"plan-select"}) %>
    </div>

    <div class="field col-md-8"><br>
      <%= form.label :billing_type, "What is your preffered billing cycle?" %>
      <%= form.select(:billing_type, ["Monthy cycle", "Semi-annual cycle - save 30%"], { prompt: "Select a billing cycle"}, {class: "form-control", id:"billing-cycle-select"}) %>
    </div>

    <div class="field col-md-8"><br>
      <%= form.label :web_administration, "Would you also like professional web administration" %>
      <%= form.select(:web_administration, ["Yes", "No", "Please elaborate further"], { prompt: "Select an option"}, {class: "form-control", id:"web-administration-select"}) %>
    </div>
    <div class="field col-md-8">
      <br>
      <%= link_to 'Previous Step', previous_wizard_path, class:"btn btn-outline-success previous-button" %>
      <%= form.submit 'Next Step (3/4)', class:"btn btn-outline-success next-button" %>
    </div>
  </div>
<% end %>

</div>
